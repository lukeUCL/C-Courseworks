set arch i386:x86-64

define run-malloc
  file $arg0
  if $_thread != 0
    kill
  end
  shell killall qemu-x86_64 >/dev/null 2>&1
  shell qemu-x86_64 -g 12948 $arg0 & sleep 0.2
  target remote localhost:12948
end

document run-malloc
  start a gdb session; takes as single argument the executable to debug.
end
